---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
		<style>
			/* CRITICAL: Reset all global styles to prevent conflicts */
			.hotel-page * {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
				--gold: #C5A572;
				--dark: #1a1a1a;
				--off-white: #f8f6f3;
				--light-gray: #e8e5e0;
				--text-dark: #2a2a2a;
				--text-light: #7a7a7a;
			}

			html {
				scroll-behavior: smooth;
			}

			body {
				font-family: 'Montserrat', sans-serif;
				color: var(--text-dark);
				background: var(--off-white);
				overflow-x: hidden;
			}

			/* MAIN WRAPPER - Full Width */
			.hotel-page {
				width: 100%;
				max-width: 100% !important;
				padding: 0 !important;
				margin: 0 !important;
			}

			h1, h2, h3, h4 {
				font-family: 'Cormorant Garamond', serif;
				font-weight: 300;
				letter-spacing: 1px;
			}

			/* === HERO SECTION === */
			.hero {
				height: 100vh;
				width: 100%;
				position: relative;
				display: flex;
				align-items: center;
				justify-content: center;
				background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
				overflow: hidden;
				margin: 0 !important;
				padding: 0 !important;
			}

			.hero::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="rgba(197,165,114,0.1)" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,160C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat center center;
				opacity: 0.3;
			}

			.hero-content {
				position: relative;
				z-index: 2;
				text-align: center;
				color: var(--off-white);
				max-width: 900px;
				padding: 2rem;
				animation: fadeIn 1.5s ease-out;
			}

			.hero-subtitle {
				font-size: 0.9rem;
				letter-spacing: 3px;
				text-transform: uppercase;
				color: var(--gold);
				margin-bottom: 1.5rem;
				font-weight: 400;
			}

			.hero h1 {
				font-size: clamp(3rem, 8vw, 6rem);
				line-height: 1.1;
				margin-bottom: 1.5rem;
				font-weight: 300;
			}

			.hero-description {
				font-size: 1.1rem;
				line-height: 1.8;
				color: rgba(248, 246, 243, 0.8);
				max-width: 600px;
				margin: 0 auto 3rem;
				font-weight: 300;
			}

			.hero-cta {
				display: inline-block;
				padding: 1.2rem 3rem;
				background: transparent;
				color: var(--gold);
				border: 1px solid var(--gold);
				text-decoration: none;
				font-size: 0.85rem;
				letter-spacing: 2px;
				text-transform: uppercase;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
				font-weight: 500;
			}

			.hero-cta:hover {
				background: var(--gold);
				color: var(--dark);
				transform: translateY(-2px);
			}

			.scroll-indicator {
				position: absolute;
				bottom: 3rem;
				left: 50%;
				transform: translateX(-50%);
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: 0.5rem;
				color: var(--gold);
				font-size: 0.75rem;
				letter-spacing: 2px;
				text-transform: uppercase;
				animation: bounce 2s infinite;
			}

			.scroll-indicator::after {
				content: '‚Üì';
				font-size: 1.2rem;
			}

			/* === INTRO SECTION === */
			.intro-section {
				width: 100%;
				padding: 8rem 2rem;
				background: var(--off-white);
				text-align: center;
			}

			.intro-section h2 {
				font-size: clamp(2.5rem, 5vw, 4rem);
				color: var(--text-dark);
				margin-bottom: 2rem;
				line-height: 1.2;
			}

			.intro-text {
				max-width: 700px;
				margin: 0 auto;
				font-size: 1.1rem;
				line-height: 1.9;
				color: var(--text-light);
				font-weight: 300;
			}

			.divider {
				width: 80px;
				height: 1px;
				background: var(--gold);
				margin: 3rem auto;
			}

			/* === PROPERTIES SECTION === */
			.properties {
				width: 100%;
				padding: 0;
				margin: 0;
				background: var(--dark);
			}

			.property {
				width: 100%;
				display: grid;
				grid-template-columns: 1fr 1fr;
				min-height: 600px;
			}

			.property:nth-child(even) .property-image {
				order: 2;
			}

			.property-image {
				background: linear-gradient(135deg, var(--gold) 0%, #a88a5c 100%);
				position: relative;
				overflow: hidden;
			}

			.property-image::before {
				content: 'üè®';
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				font-size: 10rem;
				opacity: 0.15;
			}

			.property-content {
				padding: 6rem 4rem;
				display: flex;
				flex-direction: column;
				justify-content: center;
				color: var(--off-white);
			}

			.property-label {
				font-size: 0.8rem;
				letter-spacing: 3px;
				text-transform: uppercase;
				color: var(--gold);
				margin-bottom: 1.5rem;
				font-weight: 500;
			}

			.property h3 {
				font-size: clamp(2rem, 4vw, 3rem);
				margin-bottom: 1.5rem;
				line-height: 1.2;
			}

			.property-description {
				font-size: 1rem;
				line-height: 1.8;
				color: rgba(248, 246, 243, 0.7);
				margin-bottom: 2rem;
				font-weight: 300;
			}

			.property-features {
				list-style: none;
				margin-bottom: 3rem;
			}

			.property-features li {
				padding: 0.5rem 0;
				color: rgba(248, 246, 243, 0.8);
				font-size: 0.9rem;
				display: flex;
				align-items: center;
				gap: 1rem;
			}

			.property-features li::before {
				content: '';
				width: 6px;
				height: 1px;
				background: var(--gold);
			}

			.property-link {
				display: inline-flex;
				align-items: center;
				gap: 1rem;
				color: var(--gold);
				text-decoration: none;
				font-size: 0.85rem;
				letter-spacing: 2px;
				text-transform: uppercase;
				transition: gap 0.3s ease;
				font-weight: 500;
			}

			.property-link:hover {
				gap: 1.5rem;
			}

			.property-link::after {
				content: '‚Üí';
				transition: transform 0.3s ease;
			}

			.property-link:hover::after {
				transform: translateX(5px);
			}

			/* === FEATURES SECTION === */
			.features-luxury {
				width: 100%;
				padding: 8rem 2rem;
				background: var(--off-white);
			}

			.features-header {
				text-align: center;
				margin-bottom: 5rem;
			}

			.features-header h2 {
				font-size: clamp(2.5rem, 5vw, 4rem);
				color: var(--text-dark);
				margin-bottom: 1rem;
			}

			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 3rem;
				max-width: 1200px;
				margin: 0 auto;
			}

			.feature-card {
				text-align: center;
				padding: 3rem 2rem;
				background: white;
				border-radius: 2px;
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}

			.feature-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
			}

			.feature-icon {
				font-size: 2.5rem;
				margin-bottom: 1.5rem;
				display: block;
			}

			.feature-card h4 {
				font-size: 1.3rem;
				margin-bottom: 1rem;
				color: var(--text-dark);
			}

			.feature-card p {
				font-size: 0.95rem;
				line-height: 1.7;
				color: var(--text-light);
				font-weight: 300;
			}

			/* === EXPERIENCE SECTION === */
			.experience {
				width: 100%;
				background: var(--dark);
				padding: 8rem 2rem;
				text-align: center;
				color: var(--off-white);
			}

			.experience h2 {
				font-size: clamp(2.5rem, 5vw, 4rem);
				margin-bottom: 2rem;
			}

			.experience p {
				max-width: 600px;
				margin: 0 auto 3rem;
				font-size: 1.1rem;
				line-height: 1.8;
				color: rgba(248, 246, 243, 0.7);
				font-weight: 300;
			}

			.experience-cta {
				display: inline-block;
				padding: 1.2rem 3rem;
				background: var(--gold);
				color: var(--dark);
				text-decoration: none;
				font-size: 0.85rem;
				letter-spacing: 2px;
				text-transform: uppercase;
				transition: all 0.4s ease;
				font-weight: 600;
			}

			.experience-cta:hover {
				background: #d4b88a;
				transform: translateY(-2px);
				box-shadow: 0 10px 30px rgba(197, 165, 114, 0.3);
			}

			/* === CONTACT SECTION === */
			.contact-elegant {
				width: 100%;
				padding: 8rem 2rem;
				background: var(--off-white);
			}

			.contact-container {
				max-width: 1000px;
				margin: 0 auto;
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 4rem;
			}

			.contact-item {
				text-align: center;
			}

			.contact-item h4 {
				font-size: 1.5rem;
				margin-bottom: 1rem;
				color: var(--text-dark);
			}

			.contact-item p {
				font-size: 0.95rem;
				color: var(--text-light);
				line-height: 1.8;
			}

			.contact-item a {
				color: var(--gold);
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.contact-item a:hover {
				color: var(--text-dark);
			}

			/* === ANIMATIONS === */
			@keyframes fadeIn {
				from {
					opacity: 0;
					transform: translateY(30px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes bounce {
				0%, 100% {
					transform: translate(-50%, 0);
				}
				50% {
					transform: translate(-50%, 10px);
				}
			}

			/* === RESPONSIVE === */
			@media (max-width: 968px) {
				.property {
					grid-template-columns: 1fr;
				}

				.property:nth-child(even) .property-image {
					order: 1;
				}

				.property-content {
					padding: 4rem 2rem;
				}

				.property-image {
					min-height: 400px;
				}

				.intro-section,
				.features-luxury,
				.experience,
				.contact-elegant {
					padding: 5rem 2rem;
				}
			}

			@media (max-width: 640px) {
				.hero-cta {
					padding: 1rem 2rem;
					font-size: 0.75rem;
				}

				.features-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
