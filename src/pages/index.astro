---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead title="Les Hôtels Fassia - Guinée" description="Deux hôtels d'exception en Guinée" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@300;400;500;600&family=Lato:wght@300;400;500&display=swap" rel="stylesheet">
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
				--gold: #C5A572;
				--dark: #1a1a1a;
				--off-white: #fafafa;
			}

			html {
				scroll-behavior: smooth;
			}

			body {
				font-family: 'Lato', sans-serif;
				color: #2a2a2a;
				background: white;
				overflow-x: hidden;
			}

			h1, h2, h3 {
				font-family: 'Playfair Display', serif;
				font-weight: 400;
			}

			/* SCROLL ANIMATIONS */
			.fade-in {
				opacity: 0;
				transform: translateY(60px);
				transition: opacity 0.8s ease-out, transform 0.8s ease-out;
			}

			.fade-in.visible {
				opacity: 1;
				transform: translateY(0);
			}

			.fade-in-left {
				opacity: 0;
				transform: translateX(-60px);
				transition: opacity 0.8s ease-out, transform 0.8s ease-out;
			}

			.fade-in-left.visible {
				opacity: 1;
				transform: translateX(0);
			}

			.fade-in-right {
				opacity: 0;
				transform: translateX(60px);
				transition: opacity 0.8s ease-out, transform 0.8s ease-out;
			}

			.fade-in-right.visible {
				opacity: 1;
				transform: translateX(0);
			}

			.scale-in {
				opacity: 0;
				transform: scale(0.9);
				transition: opacity 0.6s ease-out, transform 0.6s ease-out;
			}

			.scale-in.visible {
				opacity: 1;
				transform: scale(1);
			}

			/* Stagger animations for multiple items */
			.stagger-item {
				opacity: 0;
				transform: translateY(30px);
				transition: opacity 0.6s ease-out, transform 0.6s ease-out;
			}

			.stagger-item.visible {
				opacity: 1;
				transform: translateY(0);
			}

			/* Hero Section */
			.hero {
				height: 100vh;
				position: relative;
				overflow: hidden;
			}

			.hero-slideshow {
				position: absolute;
				width: 100%;
				height: 100%;
			}

			.hero-slide {
				position: absolute;
				width: 100%;
				height: 100%;
				opacity: 0;
				transition: opacity 2s ease-in-out;
				background-size: cover;
				background-position: center;
			}

			.hero-slide.active {
				opacity: 1;
			}

			.hero-slide:nth-child(1) { 
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			}
			.hero-slide:nth-child(2) { 
				background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
			}
			.hero-slide:nth-child(3) { 
				background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
			}
			.hero-slide:nth-child(4) { 
				background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
			}
			.hero-slide:nth-child(5) { 
				background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
			}

			.hero-overlay {
				position: absolute;
				width: 100%;
				height: 100%;
				background: linear-gradient(to bottom, rgba(0,0,0,0.4), rgba(0,0,0,0.6));
				z-index: 1;
			}

			.hero-content {
				position: relative;
				z-index: 2;
				height: 100%;
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				text-align: center;
				color: white;
				padding: 2rem;
			}

			.hero h1 {
				font-size: clamp(3.5rem, 12vw, 8rem);
				margin-bottom: 1.5rem;
				font-weight: 300;
				letter-spacing: 3px;
				text-shadow: 0 3px 30px rgba(0,0,0,0.5);
				animation: heroTitleFadeIn 1.2s ease-out;
			}

			.hero-subtitle {
				font-size: clamp(1rem, 2.5vw, 1.6rem);
				font-weight: 300;
				letter-spacing: 6px;
				text-transform: uppercase;
				margin-bottom: 4rem;
				opacity: 0.95;
				animation: heroSubtitleFadeIn 1.4s ease-out;
			}

			.hotels-nav {
				display: flex;
				gap: 2rem;
				flex-wrap: wrap;
				justify-content: center;
				animation: heroButtonsFadeIn 1.6s ease-out;
			}

			.hotel-button {
				padding: 1.8rem 3.5rem;
				background: transparent;
				color: white;
				border: 2px solid white;
				text-decoration: none;
				font-size: 1rem;
				letter-spacing: 3px;
				text-transform: uppercase;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
				font-weight: 500;
				position: relative;
				overflow: hidden;
			}

			.hotel-button::before {
				content: '';
				position: absolute;
				top: 50%;
				left: 50%;
				width: 0;
				height: 0;
				background: white;
				transition: width 0.4s ease, height 0.4s ease;
				transform: translate(-50%, -50%);
				z-index: -1;
				border-radius: 50%;
			}

			.hotel-button:hover::before {
				width: 300%;
				height: 300%;
			}

			.hotel-button:hover {
				color: var(--dark);
				transform: translateY(-3px);
				box-shadow: 0 10px 40px rgba(255,255,255,0.3);
			}

			/* Slide indicators */
			.slide-indicators {
				position: absolute;
				bottom: 3rem;
				left: 50%;
				transform: translateX(-50%);
				display: flex;
				gap: 1rem;
				z-index: 3;
			}

			.indicator {
				width: 12px;
				height: 12px;
				border-radius: 50%;
				background: rgba(255,255,255,0.4);
				border: 2px solid white;
				cursor: pointer;
				transition: all 0.3s ease;
			}

			.indicator.active {
				background: white;
				transform: scale(1.3);
			}

			/* Parallax Section */
			.parallax-section {
				padding: 10rem 2rem;
				text-align: center;
				position: relative;
				overflow: hidden;
			}

			.parallax-bg {
				position: absolute;
				top: -50%;
				left: 0;
				width: 100%;
				height: 200%;
				background: linear-gradient(135deg, var(--gold) 0%, #d4b88a 100%);
				opacity: 0.05;
				transform: translateY(0);
				transition: transform 0.5s ease-out;
			}

			.intro-content {
				position: relative;
				z-index: 2;
				max-width: 900px;
				margin: 0 auto;
			}

			.intro-content h2 {
				font-size: clamp(2.5rem, 6vw, 4.5rem);
				margin-bottom: 2rem;
				color: var(--dark);
			}

			.intro-content p {
				font-size: 1.3rem;
				line-height: 2;
				color: #6a6a6a;
			}

			.divider {
				width: 100px;
				height: 3px;
				background: var(--gold);
				margin: 3rem auto;
				position: relative;
				overflow: hidden;
			}

			.divider::after {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 50%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255,255,255,0.8), transparent);
				animation: shimmer 2s infinite;
			}

			/* Hotel Cards with Hover Effects */
			.hotels-section {
				padding: 6rem 2rem;
				background: var(--off-white);
			}

			.hotel-card {
				max-width: 1400px;
				margin: 0 auto 6rem;
				display: grid;
				grid-template-columns: 1fr 1fr;
				min-height: 600px;
				background: white;
				border-radius: 12px;
				overflow: hidden;
				box-shadow: 0 20px 60px rgba(0,0,0,0.1);
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}

			.hotel-card:hover {
				transform: translateY(-10px);
				box-shadow: 0 30px 80px rgba(0,0,0,0.15);
			}

			.hotel-image {
				position: relative;
				overflow: hidden;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			}

			.hotel-image::after {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
				transition: left 0.6s ease;
			}

			.hotel-card:hover .hotel-image::after {
				left: 100%;
			}

			.hotel-info {
				padding: 4rem;
				display: flex;
				flex-direction: column;
				justify-content: center;
			}

			.hotel-label {
				font-size: 0.85rem;
				letter-spacing: 3px;
				text-transform: uppercase;
				color: var(--gold);
				margin-bottom: 1.5rem;
				font-weight: 500;
			}

			.hotel-info h3 {
				font-size: clamp(2rem, 4vw, 3rem);
				margin-bottom: 1.5rem;
				line-height: 1.2;
			}

			.hotel-description {
				font-size: 1.1rem;
				line-height: 1.9;
				color: #6a6a6a;
				margin-bottom: 2.5rem;
			}

			.hotel-link {
				display: inline-flex;
				align-items: center;
				gap: 1rem;
				color: var(--gold);
				text-decoration: none;
				font-size: 0.9rem;
				letter-spacing: 2px;
				text-transform: uppercase;
				transition: gap 0.3s ease;
				font-weight: 500;
			}

			.hotel-link:hover {
				gap: 1.8rem;
			}

			.hotel-link::after {
				content: '→';
				font-size: 1.3rem;
				transition: transform 0.3s ease;
			}

			.hotel-link:hover::after {
				transform: translateX(5px);
			}

			/* Animations */
			@keyframes heroTitleFadeIn {
				from {
					opacity: 0;
					transform: translateY(50px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes heroSubtitleFadeIn {
				from {
					opacity: 0;
					transform: translateY(30px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes heroButtonsFadeIn {
				from {
					opacity: 0;
					transform: translateY(30px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes shimmer {
				0% { left: -100%; }
				100% { left: 100%; }
			}

			/* Responsive */
			@media (max-width: 968px) {
				.hotel-card {
					grid-template-columns: 1fr;
				}

				.hotel-image {
					min-height: 400px;
				}

				.hotel-info {
					padding: 3rem 2rem;
				}
			}

			@media (max-width: 768px) {
				.hero h1 {
					font-size: clamp(2.5rem, 10vw, 4rem);
				}

				.hero-subtitle {
					font-size: clamp(0.8rem, 2vw, 1.2rem);
					letter-spacing: 4px;
				}

				.hotels-nav {
					flex-direction: column;
					gap: 1.5rem;
					width: 100%;
					max-width: 400px;
				}

				.hotel-button {
					padding: 1.5rem 2.5rem;
					font-size: 0.9rem;
					width: 100%;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Hero Section -->
		<section class="hero">
			<div class="hero-slideshow">
				<div class="hero-slide active"></div>
				<div class="hero-slide"></div>
				<div class="hero-slide"></div>
				<div class="hero-slide"></div>
				<div class="hero-slide"></div>
			</div>
			<div class="hero-overlay"></div>
			<div class="hero-content">
				<h1>Les Hôtels Fassia</h1>
				<p class="hero-subtitle">Hospitalité Guinéenne</p>
				
				<div class="hotels-nav">
					<a href="/hotel-nongo" class="hotel-button">
						Hôtel Fassia Nongo
					</a>
					<a href="/hotel-coyah" class="hotel-button">
						Hôtel Fassia Coyah
					</a>
				</div>
			</div>
			
			<div class="slide-indicators">
				<div class="indicator active" data-slide="0"></div>
				<div class="indicator" data-slide="1"></div>
				<div class="indicator" data-slide="2"></div>
				<div class="indicator" data-slide="3"></div>
				<div class="indicator" data-slide="4"></div>
			</div>
		</section>

		<!-- Intro with Parallax -->
		<section class="parallax-section fade-in">
			<div class="parallax-bg"></div>
			<div class="intro-content">
				<h2>Une Expérience Inoubliable</h2>
				<div class="divider"></div>
				<p>
					Deux établissements d'exception en Guinée, où l'élégance moderne rencontre 
					la chaleur de l'hospitalité africaine. Découvrez nos espaces raffinés et 
					notre service personnalisé.
				</p>
			</div>
		</section>

		<!-- Hotels Cards -->
		<section class="hotels-section">
			<!-- Nongo -->
			<div class="hotel-card fade-in-left">
				<div class="hotel-image"></div>
				<div class="hotel-info">
					<div class="hotel-label">Conakry</div>
					<h3>Fassia Résidence<br>Nongo</h3>
					<p class="hotel-description">
						Dans le quartier dynamique de Nongo, notre hôtel offre des chambres 
						luxueuses, un restaurant, une piscine et des salles de conférence modernes.
					</p>
					<a href="/hotel-nongo" class="hotel-link">
						Découvrir l'hôtel
					</a>
				</div>
			</div>

			<!-- Coyah -->
			<div class="hotel-card fade-in-right">
				<div class="hotel-info">
					<div class="hotel-label">Coyah</div>
					<h3>Hôtel Fassia<br>Coyah</h3>
					<p class="hotel-description">
						À Coyah, profitez d'un cadre élégant avec toutes les installations 
						modernes pour un séjour mémorable en Guinée.
					</p>
					<a href="/hotel-coyah" class="hotel-link">
						Découvrir l'hôtel
					</a>
				</div>
				<div class="hotel-image"></div>
			</div>
		</section>

		<Footer />

		<script>
			// Hero Slideshow
			let currentSlide = 0;
			const slides = document.querySelectorAll('.hero-slide');
			const indicators = document.querySelectorAll('.indicator');
			
			function goToSlide(index) {
				slides[currentSlide].classList.remove('active');
				indicators[currentSlide].classList.remove('active');
				currentSlide = index;
				slides[currentSlide].classList.add('active');
				indicators[currentSlide].classList.add('active');
			}
			
			function nextSlide() {
				const next = (currentSlide + 1) % slides.length;
				goToSlide(next);
			}
			
			let slideInterval = setInterval(nextSlide, 5000);
			
			indicators.forEach((indicator, index) => {
				indicator.addEventListener('click', () => {
					clearInterval(slideInterval);
					goToSlide(index);
					slideInterval = setInterval(nextSlide, 5000);
				});
			});

			// Scroll Animations
			const observerOptions = {
				threshold: 0.2,
				rootMargin: '0px 0px -50px 0px'
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach((entry, index) => {
					if (entry.isIntersecting) {
						// Add stagger delay for multiple items
						setTimeout(() => {
							entry.target.classList.add('visible');
						}, index * 100);
					}
				});
			}, observerOptions);

			// Observe all animated elements
			document.querySelectorAll('.fade-in, .fade-in-left, .fade-in-right, .scale-in, .stagger-item').forEach(el => {
				observer.observe(el);
			});

			// Parallax effect
			window.addEventListener('scroll', () => {
				const parallaxBg = document.querySelector('.parallax-bg');
				if (parallaxBg) {
					const scrolled = window.pageYOffset;
					parallaxBg.style.transform = `translateY(${scrolled * 0.3}px)`;
				}
			});

			// Smooth scroll for anchor links
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', function (e) {
					e.preventDefault();
					const target = document.querySelector(this.getAttribute('href'));
					if (target) {
						target.scrollIntoView({
							behavior: 'smooth',
							block: 'start'
						});
					}
				});
			});
		</script>
	</body>
</html>